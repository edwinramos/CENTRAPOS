@model WEBPOS.DataAccess.DataEntities.DeTax
@{
    Layout = null;
}

@using (Html.BeginForm("TaxManage", "Tax", FormMethod.Post, new { id = "dataForm" }))
{
    <div class="container form-group">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">&times;</a>
                    <h4 class="modal-title">Editar Lista de Precio</h4>
                </div>

                <div class="modal-body col-md-12">
                    <div class="form-group col-md-4">
                        @Html.Label("Código")
                        @Html.TextBoxFor(m => m.TaxCode, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Descripción")
                        @Html.TextBoxFor(m => m.TaxDescription, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Porcentaje")
                        @Html.TextBoxFor(m => m.TaxPercent, new { @class = "form-control", @type = "number" })
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-default" data-dismiss="modal">Cerrar</a>
                    <a class="btn btn-default" onclick=onFormSubmit();>Guardar</a>
                </div>
            </div>
        </div>
    </div>
}