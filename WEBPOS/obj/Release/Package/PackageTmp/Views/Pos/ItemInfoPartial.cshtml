@{
    Layout = null;
}

<header class="major">
    <h4>Articulo Seleccionado</h4>
</header>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Código"): <label id="selectedItemCode" style="font-weight: normal !important;" />
                <br />
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Código de Barras"): <label id="selectedBarcode" style="font-weight: normal !important;" />
                <br />
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Descripción"): <label id="selectedItemDescription" style="font-weight: normal !important;" />
                <br />
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Lista de Precio"): <label id="selectedItemPriceList" style="font-weight: normal !important;" />

                <br />
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Precio"): <label id="selectedItemSellPrice" style="font-weight: normal !important;" />
                <br />
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Precio con Impuesto"): <label id="selectedItemVatPrice" style="font-weight: normal !important;" />
                <br />
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Cantidad"): <label id="selectedItemQuantity" style="font-weight: normal !important;" />
                <br />
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="col-md-12">
                
            </div>
        </div>
    </div>
</div>