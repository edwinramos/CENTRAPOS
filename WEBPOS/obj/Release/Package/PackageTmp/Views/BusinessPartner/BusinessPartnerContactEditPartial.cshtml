@model WEBPOS.DataAccess.DataEntities.DeBusinessPartnerContact
@{
    Layout = null;
}

@using (Html.BeginForm("BPContactManage", "BusinessPartner", FormMethod.Post, new { id = "dataForm", onkeydown = "return (event.keyCode!=13);" }))
{
    @Html.HiddenFor(x => x.BusinessPartnerCode)
    <div class="container form-group">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">&times;</a>
                    <h4 class="modal-title">Editar Lista de Precio</h4>
                </div>

                <div class="modal-body col-md-12">
                    <div class="form-group col-md-4">
                        @Html.Label("Codigo")
                        @Html.TextBoxFor(m => m.BusinessPartnerContactCode, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Nombre")
                        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Titulo")
                        @Html.TextBoxFor(m => m.ContactTitle, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Telefono 1")
                        @Html.TextBoxFor(m => m.Telephone1, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Telefono 2")
                        @Html.TextBoxFor(m => m.Telephone2, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Email")
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-default" data-dismiss="modal">Cerrar</a>
                    <a class="btn btn-default" onclick=onFormSubmit();>Guardar</a>
                </div>
            </div>
        </div>
    </div>
}