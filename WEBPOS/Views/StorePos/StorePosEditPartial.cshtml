@model WEBPOS.DataAccess.DataEntities.DeStorePos
@{
    Layout = null;
}

@using (Html.BeginForm("StorePosManage", "StorePos", FormMethod.Post, new { id = "dataForm" }))
{
    <div class="container form-group">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">&times;</a>
                    <h4 class="modal-title">Editar Lista de Precio</h4>
                </div>

                <div class="modal-body col-md-12">
                    <div class="form-group col-md-4">
                        @Html.Label("Tienda")
                        @{
                            List<SelectListItem> list = new List<SelectListItem>();
                            foreach (var ob in WEBPOS.DataAccess.BusinessLayer.BlStore.ReadAll())
                            {
                                list.Add(new SelectListItem { Text = ob.StoreCode + " | " + ob.StoreDescription, Value = ob.StoreCode });
                            }
                        }
                        @Html.DropDownListFor(model => model.StoreCode, list, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Terminal")
                        @Html.TextBoxFor(m => m.StorePosCode, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Descripción")
                        @Html.TextBoxFor(m => m.StorePosDescription, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Id de Dispositivo")
                        @Html.TextBoxFor(m => m.DeviceId, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Tipo de Dispositivo")
                        @Html.EnumDropDownListFor(model => model.DeviceType, "Tipo de Dispositivo", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-default" data-dismiss="modal">Cerrar</a>
                    <a class="btn btn-default" onclick=onFormSubmit();>Guardar</a>
                </div>
            </div>
        </div>
    </div>
}